<div class="container main">
  <h1>List of Burgers</h1>
  <div class="row">
    <ul id="burgerlist">
      {{#each all }}
        <li>Name: {{burger_name}} <br> Devoured: {{devoured}} <br> Time Created: {{date}}</li>
      {{/each}}
    </ul>
  </div>
  <div class="row">
    <form action="/post-burger">
      New Burger Name:<br>
      <input id="burgerText" type="text" name="burger_name">
      <br><br>
      <input id="submitBurger" class="btn" type="submit" value="Click Here To Add a Burger!">
    </form> 
  </div>
</div>